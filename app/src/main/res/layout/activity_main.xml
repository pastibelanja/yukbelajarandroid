<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68BEC0C3"
    tools:context=".ui.home.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnLogin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/pas_kurma"
                android:scaleType="centerCrop"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/crvTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaksi"
                        android:textSize="15sp"
                        android:textColor="@color/colorTransaksi"
                        android:drawableStart="@drawable/ic_transaksi"
                        android:drawableTint="@color/colorTransaksi"
                        android:drawablePadding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat Transaksi | Buat Transaksi Baru"
                        android:textSize="15sp"
                        android:textColor="@color/colorTransaksi"
                        android:paddingStart="35dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crvAgen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agen"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:drawableStart="@drawable/ic_agen"
                        android:drawableTint="@color/colorAgen"
                        android:drawablePadding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat Transaksi | Buat Transaksi Baru"
                        android:textSize="15sp"
                        android:textColor="@color/colorAgen"
                        android:paddingStart="35dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crvProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaksi"
                        android:textSize="15sp"
                        android:textColor="@color/colorProfil"
                        android:drawableStart="@drawable/ic_profil"
                        android:drawableTint="@color/colorProfil"
                        android:drawablePadding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat Transaksi | Buat Transaksi Baru"
                        android:textSize="15sp"
                        android:textColor="@color/colorProfil"
                        android:paddingStart="35dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn_login"
        android:layout_margin="15dp"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FCFDFF"/>

</RelativeLayout>